#!/bin/bash
. ./lib

options=()
options+=(
  "Modify pacman.conf" ""
  "Create swap file" ""
  "Hibernation settings" ""
  "GPU settings" ""
  "Patch vconsole" ""
  "SSH settings" ""
  "Samba settings" ""
  "Disk settings" ""
  "Hyprland-Dotfiles" ""
  "Neovim configs" ""
  "Remove neovim configs" ""
)
sel=$(dialog --backtitle "$apptitle" --title "Settings :" --cancel-button "Back" --menu "" 0 0 0 \
  "${options[@]}" \
  3>&1 1>&2 2>&3)
if [ ! "$?" = "0" ]; then
  exit 1
fi

case $sel in
"Modify pacman.conf")
  message "Script will open neovim editor. \nTo quit press ":q""
  nvim config/pcmn
  if (confirm "Do you want to apply pacman script ?"); then
    clear
    sscript config/pcmn
    pressanykey
  fi
  ;;
"Create swap file")
  message "Script will open neovim editor. \nTo quit press ":q""
  nvim config/swap
  if (confirm "Do you want to apply swap script ?"); then
    clear
    sscript config/swap
    pressanykey
  fi
  ;;
"Hibernation settings")
  message "Script will open neovim editor. \nTo quit press ":q""
  nvim config/hibernation
  if (confirm "Do you want to apply hibernation script ?"); then
    clear
    sscript config/hibernation
    pressanykey
  fi
  ;;
"GPU settings")
  message "Script will open neovim editor. \nTo quit press ":q""
  nvim config/gpu
  if (confirm "Do you wanto apply gpu script ?"); then
    clear
    script config/gpu
    pressanykey
  fi
  ;;
"Patch vconsole")
  message "Script will open neovim editor. \nTo quit press ":q""
  nvim config/patchvc
  if (confirm "Do you want to apply vconsole patch script ?"); then
    clear
    script config/patchvc
    pressanykey
  fi
  ;;
"SSH settings")
  message "Script will open neovim editor. \nTo quit press ":q""
  nvim config/ssh
  if (confirm "Do you want to apply ssh script ?"); then
    clear
    sscript config/ssh
    pressanykey
  fi
  ;;
"Samba settings")
  message "Script will open neovim editor. \nTo quit press ":q""
  nvim config/samba
  if (confirm "Do you want to apply samba script ?"); then
    clear
    script config/samba
    pressanykey
  fi
  ;;
"Disk settings")
  message "Script will open neovim editor. \nTo quit press ":q""
  nvim config/disks
  if (confirm "Do you want to apply disks settings script ?"); then
    clear
    script config/disks
    pressanykey
  fi
  ;;
"Hyprland-Dotfiles")
  message "Script will open neovim editor. \nTo quit press ":q""
  nvim config/hypr-dot
  if (confirm "Do you want to copy all dotfiles ? \n "); then
    clear
    script config/hypr-dot
    pressanykey
  else
    message "Nothing copied \n "
  fi
  ;;
"Neovim configs")
  if (confirm "Do you want to copy nvim config ? \n "); then
    clear
    script config/nvim
  else
    message "Nothing copied \n "
  fi
  ;;
"Remove neovim configs")
  if (confirm "Do you want to remove nvim ? \n "); then
    clear
    rm -rf ~/.config/nvim
    rm -rf ~/.local/share/nvim
    rm -rf ~/.cache/nvim
    message "Neovim configs are completely removed. \n "
  fi
  ;;
esac

exit 0
